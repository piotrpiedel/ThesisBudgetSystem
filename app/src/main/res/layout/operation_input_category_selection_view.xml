<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/operation_input_category_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.pavlospt.roundedletterview.RoundedLetterView
        android:id="@+id/round_letter_view_category_selection"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        app:rlv_backgroundColorValue="@color/Green"
        app:rlv_titleColor="@android:color/white"
        app:rlv_titleSize="15dp"
        app:rlv_titleText="A"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/category_title_add_view_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/round_letter_view_category_selection"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:visibility="invisible"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin nibh augue, suscipit a, scelerisque sed, lacinia in, mi"
        tools:visibility="visible" />

</RelativeLayout>